

<style>
    #chatArea {
        background-image: url('/images/chat-bg.png'); /* optional, wenn du WhatsApp-ähnlichen Hintergrund willst */
        background-size: cover;
    }

    #messagesList li {
        margin-bottom: 10px;
        max-width: 70%;
        padding: 10px 15px;
        border-radius: 20px;
        word-wrap: break-word;
    }

        #messagesList li.self {
            background-color: #dcf8c6;
            align-self: flex-end;
            text-align: right;
        }

        #messagesList li.other {
            background-color: #ffffff;
            align-self: flex-start;
            text-align: left;
        }

</style>

<div class="container-fluid vh-100 d-flex flex-column" style="background-color: #f0f2f5;">
    <!-- Header -->
    <div class="row py-3 shadow-sm" style="background-color: #008069;">
        <div class="col text-center">
            <h4 class="text-white mb-0">SignalR Chat</h4>
        </div>
    </div>

    <!-- Messages area -->
    <div class="row flex-grow-1 overflow-auto px-3 py-2" id="chatArea">
        <ul id="messagesList" class="list-unstyled w-100"></ul>
    </div>

    <!-- Input area fixed at bottom -->
    <div class="row py-2 px-3 shadow-sm" style="background-color: #ffffff;">
        <div class="col-2">
            <input type="text" id="senderEmail" value="@User.Identity.Name" class="form-control-plaintext text-muted" readonly />
        </div>
        <div class="col-2">
            <input type="text" id="receiverEmail" class="form-control" placeholder="Receiver (optional)" />
        </div>
        <div class="col-6">
            <input type="text" id="chatMessage" class="form-control" placeholder="Type a message" />
        </div>
        <div class="col-2">
            <button id="sendMessage" class="btn btn-success w-100">Send</button>
        </div>
    </div>
</div>

<script src="~/js/signalr.js"></script>
<script src="~/js/chat.js"></script>
